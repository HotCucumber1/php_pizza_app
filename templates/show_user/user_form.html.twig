<form action="{{ path("update_user", {user_id: user.getUserId()}) }}" method="post" enctype="multipart/form-data" role="form" class="info-form">
    <h1>User</h1>
    <div class="form-group">
        <label for="name">Name:</label>
        <input name="name" id="name" type="text" class="form-control" value="{{ user.getFirstName() }}">
    </div>
    <div class="form-group">
        <label for="last_name">Last_name:</label>
        <input name="last_name" id="last_name" type="text" class="form-control" value="{{ user.getLastName() }}">
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input name="email" id="email" type="email" class="form-control" value="{{ user.getEmail() }}">
    </div>
    <div class="form-group">
        <label for="phone">Phone:</label>
        <input name="phone" id="phone" type="number" class="form-control" value="{{ user.getPhone() }}">
    </div>
    <div class="form-group">
        <label for="avatar_path">Avatar:</label>
        <input type="hidden" name="MAX_FILE_SIZE" value="30000000"/>
        <input name="avatar_path" id="avatar_path" type="file" accept="image/png, image/jpeg, image/gif" class="form-control">
        <label class="avatar-label" for="avatar">Current avatar:</label>
        <img class="avatar" id="avatar" src="{{ user.getAvatarPath() }}" alt="Avatar">
    </div>
    <button type="submit" class="submit-button btn btn-primary">Update</button>

    <a href="{{ path("delete_user", {user_id: user.getUserId() }) }}" class="action-button btn btn-primary">Delete this user</a>
    <a href="{{ path("all_users", {}) }}" class="action-button btn btn-primary">All users</a>
</form>