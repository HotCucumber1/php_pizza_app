{% extends "base.html.twig" %}

{%  block head %}
    {{ parent() }}
    <link href="/styles/user_page_styles.css" rel="stylesheet">
{% endblock %}

{% block title %}UserPage{% endblock %}

{% block user_page %}
    <form action="{{ path("update_user", {user_id: user.userId}) }}" method="post" enctype="multipart/form-data" role="form" class="info-form">
        <h1>User</h1>
        <div class="form-group">
            <label for="name">Name:</label>
            <input name="name" id="name" type="text" class="form-control" value="{{ user.firstName }}">
        </div>
        <div class="form-group">
            <label for="last_name">Last_name:</label>
            <input name="last_name" id="last_name" type="text" class="form-control" value="{{ user.lastName }}">
        </div>
        <div class="form-group">
            <label for="middle_name">Middle_name:</label>
            <input name="middle_name" id="middle_name" type="text" class="form-control" value="{{ user.middleName }}">
        </div>
        <div class="form-group">
            <label for="gender">Gender:</label>
            <input name="gender" id="gender" type="text" class="form-control" value="{{ user.gender }}">
        </div>
        <div class="form-group">
            <label for="birth_date">Birth date:</label>
            <input name="birth_date" id="birth_date" type="date" class="form-control" value="{{ user.birthDate }}">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input name="email" id="email" type="email" class="form-control" value="{{ user.email }}">
        </div>
        <div class="form-group">
            <label for="phone">Phone:</label>
            <input name="phone" id="phone" type="number" class="form-control" value="{{ user.phone }}">
        </div>
        <div class="form-group">
            <label for="avatar_path">Avatar:</label>
            <input type="hidden" name="MAX_FILE_SIZE" value="30000000"/>
            <input name="avatar_path" id="avatar_path" type="file" accept="image/png, image/jpeg, image/gif" class="form-control">
            <label class="avatar-label" for="avatar">Current avatar:</label>
            <img class="avatar" id="avatar" src="{{ user.avatarPath }}" alt="Avatar">
        </div>
        <button type="submit" class="submit-button btn btn-primary">Update</button>

        <a href="{{ path("delete_user", {user_id: user.userId}) }}" class="del-button btn btn-primary">Delete this user</a>
    </form>
{% endblock %}