<form action="/store_pizza" class="form" method="POST" enctype="multipart/form-data">
    <div class="form__input-block">
        <h2 class="form__title">Новая пицца</h2>

        <div class="form__input-field">
            <label class="form__label" for="name">Название</label>
            <input class="form__input" type="text" id="name" name="name">
        </div>

        <div class="form__input-field">
            <label class="form__label" for="definition">Описание</label>
            <input class="form__input" type="text" id="definition" name="definition">
        </div>

        <div class="form__input-field">
            <label class="form__label" for="weight">Масса</label>
            <input class="form__input" type="number" id="weight" name="weight">
        </div>

        <div class="form__input-field">
            <label class="form__label" for="price">Цена</label>
            <input class="form__input" type="number" id="price" name="price">
        </div>

        <button class="form__sign-in-button">Добавить</button>
    </div>

    <div class="form__avatar-area">
        <label class="form__avatar" for="image">
            <img class="form__avatar-img" src="/images/pepperoni.png" alt="Фото">
            <p class="form__avatar-button">Загрузить изображение</p>
        </label>
        <input class="form__avatar-input" type="file" id="image" name="image" value="/images/pepperoni.png">
    </div>
</form>